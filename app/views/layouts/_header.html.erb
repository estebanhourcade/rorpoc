                <% end %>
            </div>


            <div class="flex-1">
                <a class="text-stone-800 hover:text-black flex items-center gap-2 text-base justify-end" href="/dashboard">
                    <i class="fas fa-user" aria-hidden="true"></i>
                    <span>Esteban</span>
                </a>
            </div>
        </nav>
