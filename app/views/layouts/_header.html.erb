            <div class="flex flex-1 pl-5">
                <div class="w-20">
                    <button @click="isOpen = !isOpen" data-collapse-toggle="navbar-hamburger" class="text-slate-700 hover:text-slate-900">
                        <i class="fas fa-bars fa-lg" aria-hidden="true"></i>
                    </button>
                </div>
            </div>

