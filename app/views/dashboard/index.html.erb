<div>
    <div class="p-4">
        <div class="flex items-center">
            <div class="h-16 w-16 rounded-full bg-indigo-200/40 flex items-center justify-center">
                <i class="fas fa-user text-2xl text-indigo-600" aria-hidden="true"></i>
            </div>
            <div class="ml-4">
                <h2 class="text-xl font-semibold text-gray-900">Esteban Hourcade</h2>
                <p class="text-sm text-black/60">hourcadeesteban@gmail.com</p>
            </div>
        </div>
    </div>

    <div class="pb-6">
        <div class="mt-6 grid grid-cols-1 gap-2">
            <a class="flex items-center p-3 rounded-lg bg-white/80 hover:bg-white transition-colors duration-200" href="/profile">
                <i class="fas fa-user-circle fa-fw text-indigo-600 mr-3" aria-hidden="true"></i>
                <span class="text-gray-700">Profile details</span>
                <i class="fas fa-chevron-right ml-auto text-gray-400" aria-hidden="true"></i>
            </a>
            <a class="flex items-center p-3 rounded-lg bg-white/80 hover:bg-white transition-colors duration-200" href="/wallet">
                <i class="fas fa-wallet fa-fw text-indigo-600 mr-3" aria-hidden="true"></i>
                <span class="text-gray-700">Wallet &amp; transactions</span>
                <i class="fas fa-chevron-right ml-auto text-gray-400" aria-hidden="true"></i>
            </a>
            <a class="flex items-center p-3 rounded-lg bg-white/80 hover:bg-white transition-colors duration-200" href="/products">
                <i class="fas fa-box fa-fw text-indigo-600 mr-3" aria-hidden="true"></i>
                <span class="text-gray-700">My items</span>
                <i class="fas fa-chevron-right ml-auto text-gray-400" aria-hidden="true"></i>
            </a>
        </div>
    </div>

    <%= render "numbers" %>

    <div class="bg-white sm:rounded-lg shadow-sm overflow-hidden">
        <div class="p-6">
            <div class="space-y-4">
                <div class="flex items-center justify-between">
                    <h3 class="text-lg font-semibold text-gray-800">
                        <i class="fas fa-chart-bar mr-2" aria-hidden="true"></i>
                        Product summary
                    </h3>
                    <a class="text-sm text-indigo-600 hover:text-indigo-800" href="/products">
                        View all
                        <i class="fas fa-arrow-right ml-1" aria-hidden="true"></i>
                    </a>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div class="bg-white rounded-lg border border-gray-200 p-4">
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <p class="text-xs font-medium text-gray-500 uppercase">
                                    Active
                                </p>
                                <p class="mt-1 text-2xl font-semibold text-gray-900">
                                    0
                                </p>
                            </div>
                            <div>
                                <p class="text-xs font-medium text-gray-500 uppercase">
                                    Drafts
                                </p>
                                <p class="mt-1 text-2xl font-semibold text-gray-900">
                                    0
                                </p>
                            </div>
                            <div>
                                <p class="text-xs font-medium text-gray-500 uppercase">
                                    In review
                                </p>
                                <p class="mt-1 text-2xl font-semibold text-gray-900">
                                    0
                                </p>
                            </div>
                            <div>
                                <p class="text-xs font-medium text-gray-500 uppercase">
                                    Sold
                                </p>
                                <p class="mt-1 text-2xl font-semibold text-gray-900">
                                    0
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="bg-gradient-to-br from-indigo-50 to-purple-50 rounded-lg border border-indigo-100 p-4">
                        <div class="space-y-4">
                            <div>
                                <p class="text-xs font-medium text-indigo-900 uppercase">
                                    Total items
                                </p>
                                <p class="mt-1 text-3xl font-bold text-indigo-700">
                                    2
                                </p>
                            </div>
                            <div class="pt-2 border-t border-indigo-100">
                                <div class="flex justify-between items-center">
                                    <p class="text-xs font-medium text-indigo-700">
                                        Published items
                                    </p>
                                    <p class="text-sm font-semibold text-indigo-900">
                                        0
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="bg-white sm:rounded-lg shadow-sm overflow-hidden">
        <div class="p-6">
            <div class="space-y-4">
                <div class="space-y-4">
                    <div class="flex items-center justify-between">
                        <h3 class="text-lg font-semibold text-gray-800">
                            <i class="fas fa-clock mr-2" aria-hidden="true"></i>
                            Recent transactions
                        </h3>
                        <a class="text-sm text-indigo-600 hover:text-indigo-800" href="/wallet">
                            View all
                            <i class="fas fa-arrow-right ml-1" aria-hidden="true"></i>
                        </a>
                    </div>

                    <div class="bg-white rounded-xl overflow-hidden border border-gray-200">
                        <div class="overflow-x-auto">
                            <div class="inline-block min-w-full align-middle">
                                <table class="min-w-full divide-y divide-gray-200 transactions-table">
                                    <thead class="bg-gray-50">
                                        <tr>
                                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white divide-y divide-gray-200">

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>